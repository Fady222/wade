{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "@type": "Thing",
    "id": "de:tum:ei:esi:fp:coffee",
    "title": "Virtual-Coffee-Machine",
    "description": "A virtual coffee machine to learn the WoT TD standard",
    "security": ["nosec_sc"],
    "properties": {
        "state": {
            "type": "string",
            "readOnly": false,
            "enum": [
                "Ready",
                "Brewing",
                "Error"
            ],
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/properties/state",
                    "contentType": "application/json",
                    "op": [
                        "readproperty",
                        "writeproperty"
                    ]
                }
            ],
            "writeOnly": false,
            "observable": false
        },
        "waterStatus": {
            "type": "integer",
            "readOnly": true,
            "unit": "%",
            "maximum": 100,
            "minimum": 0,
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/properties/waterStatus",
                    "contentType": "application/json",
                    "op": [
                        "readproperty"
                    ],
                    "htv:methodName": "GET"
                }
            ],
            "writeOnly": false,
            "observable": false
        },
        "coffeeStatus": {
            "type": "integer",
            "readOnly": true,
            "unit": "%",
            "maximum": 100,
            "minimum": 0,
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/properties/coffeeStatus",
                    "contentType": "application/json",
                    "op": [
                        "readproperty"
                    ],
                    "htv:methodName": "GET"
                }
            ],
            "writeOnly": false,
            "observable": false
        },
        "binStatus": {
            "type": "integer",
            "readOnly": true,
            "unit": "%",
            "maximum": 100,
            "minimum": 0,
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/properties/binStatus",
                    "contentType": "application/json",
                    "op": [
                        "readproperty"
                    ],
                    "htv:methodName": "GET"
                }
            ],
            "writeOnly": false,
            "observable": false
        }
    },
    "actions": {
        "brew": {
            "input": {
                "type": "string",
                "enum": [
                    "latte-machiato",
                    "espresso",
                    "cappuccino"
                ]
            },
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/actions/brew",
                    "contentType": "application/json",
                    "op": [
                        "invokeaction"
                    ],
                    "htv:methodName": "POST"
                }
            ],
            "idempotent": false,
            "safe": false
        },
        "abort": {
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/actions/abort",
                    "contentType": "application/json",
                    "op": [
                        "invokeaction"
                    ],
                    "htv:methodName": "POST"
                }
            ],
            "idempotent": false,
            "safe": false
        },
        "shutdown": {
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/actions/shutdown",
                    "contentType": "application/json",
                    "op": [
                        "invokeaction"
                    ],
                    "htv:methodName": "POST"
                }
            ],
            "idempotent": false,
            "safe": false
        }
    },
    "events": {
        "maintenance": {
            "data": {
                "type": "string"
            },
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/events/maintenance",
                    "contentType": "application/json",
                    "subprotocol": "longpoll",
                    "op": [
                        "subscribeevent"
                    ]
                },
                {
                    "href": "ws://127.0.0.1:80/Virtual-Coffee-Machine/events/maintenance",
                    "contentType": "application/json",
                    "op": "subscribeevent"
                }
            ]
        },
        "error": {
            "data": {
                "type": "string"
            },
            "forms": [
                {
                    "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/events/error",
                    "contentType": "application/json",
                    "subprotocol": "longpoll",
                    "op": [
                        "subscribeevent"
                    ]
                },
                {
                    "href": "ws://127.0.0.1:80/Virtual-Coffee-Machine/events/error",
                    "contentType": "application/json",
                    "op": "subscribeevent"
                }
            ]
        }
    },
    "forms": [
        {
            "href": "http://127.0.0.1:80/Virtual-Coffee-Machine/all/properties",
            "contentType": "application/json",
            "op": [
                "readallproperties",
                "readmultipleproperties",
                "writeallproperties",
                "writemultipleproperties"
            ]
        }
    ],
    "securityDefinitions": {
        "nosec_sc": {
            "scheme": "nosec"
        }
    }
}